generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String @id @default(cuid())
  email String @unique
  name  String
  password String
}

model Task {
  id        String @id @default(cuid())
  title     String
  description String
  status    String @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
